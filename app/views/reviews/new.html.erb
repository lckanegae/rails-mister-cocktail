<div class="row justify-content-center">
  <h1>Add new review</h1>
</div>

<div class="m-5">
  <%= simple_form_for [@cocktail, @review] do |f| %>
    <%= f.input :rating, collection: 0..5 %>
    <%= f.input :content %>
    <%= f.button :submit, "Submit review", class: "btn btn-primary btn-sm m-2" %>
  <% end %>
</div>
